{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "importHelpers": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@svgs": [
        "components/Svgs"
      ],
      "@theme": [
        "components/useTheme"
      ],
      "@layout/*": [
        "components/layout/*"
      ],
      "@indexComponents/*": [
        "components/indexComponents/*"
      ],
      "@postComponents/*": [
        "components/postComponents/*"
      ],
      "@blogComponents/*": [
        "components/blogComponents/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@context/*": [
        "context/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
