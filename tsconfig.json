{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "importHelpers": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@redux/*": ["redux/*"],
      "@layout/*": ["components/layout/*"],
      "@blogComponents/*": ["components/blogComponents/*"],
      "@svgs": ["components/Svgs"],
      "@theme": ["components/useTheme"],
      "@indexComponents/*": ["components/indexComponents/*"],
      "@postComponents/*": ["components/postComponents/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js"],
  "exclude": ["node_modules"]
}
